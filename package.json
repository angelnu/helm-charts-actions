{
  "name": "helm-charts-actions",
  "version": "1.0.0",
  "description": "GitHub actions to use with helm-charts repo",
  "scripts": {
    "build": "tsc --build",
    "lint": "eslint --report-unused-disable-directives --max-warnings=0 src --ext .js,.ts",
    "lint-fix": "eslint --report-unused-disable-directives --max-warnings=0 src --ext .js,.ts --fix",
    "removeNPMAbsolutePaths": "removeNPMAbsolutePaths . --force"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "lib/"
      },
      "compile": false
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.9.0",
    "@actions/github": "^5.0.3",
    "@octokit/types": "^6.41.0",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "fs-extra": "^10.1.0",
    "json-schema-to-ts": "^2.5.5",
    "semver": "^7.3.7",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.21",
    "@types/semver": "^7.3.10",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^8.0.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-github": "^4.2.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-no-async-foreach": "^0.1.1",
    "removeNPMAbsolutePaths": "3.0.0",
    "typescript": "^4.6.2"
  }
}
